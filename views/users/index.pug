extends ../layouts/common.pug

block content
	block content
	h1 Đăng nhập

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="username") Tên đăng nhập
			input#name.form-control(type="text", name="username", value=values ? values.username : "")

		.form-group
			label(for="password") Mật khẩu
			input#phone.form-control(type="password", name="password", value=values ? values.password : "")

		button.btn.btn-primary Đăng nhập
	a(href='/users/registerUser') Tạo tài khoản