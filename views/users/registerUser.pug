extends ../layouts/common.pug

block content
	block content
	h1 Đăng ký tài khoản

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/register", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Họ tên
			input#name.form-control(type="text", name="name", value=values ? values.name : "")
		
		.form-group
			label(for="phone") SDT
			input#phone.form-control(type="text", name="phone", value=values ? values.phone : "")
		
		.form-group
			label(for="email") Email
			input#email.form-control(type="text", name="email", value=values ? values.email : "")
		
		.form-group
			label(for="password") Mật khẩu
			input#password.form-control(type="password", name="password", value=values ? values.password : "")
		
		.form-group
			label(for="confirmpassword") Xác nhận mật khẩu
			input#confirmpassword.form-control(type="password", name="confirmpassword", value=values ? values.confirmpassword : "")
		
		.form-group-sm
			p Giới tính
			label(for="male") Nam
			input#male.form-control(type="radio", name="male", value=values ? values.male : "")
			label(for="female") Nữ
			input#female.form-control(type="radio", name="female", value=values ? values.female : "")
		.form-group
			label(for="dateofbirth") Ngày sinh
			input#dateofbirth.form-control(type="date", name="dateofbirth", value=values ? values.dateofbirth : "")
		
		button.btn.btn-primary Đăng ký
