extends ../layouts/common.pug

block content
	block content
	h1 Đăng ký tài khoản

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/register", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Họ tên
			input#name.form-control(type="text", name="name", value=values ? values.name : "")
		
		.form-group
			label(for="phone") SDT
			input#phone.form-control(type="text", name="phone")
		
		.form-group
			label(for="email") Email
			input#email.form-control(type="text", name="email")
		
		.form-group
			label(for="password") Mật khẩu
			input#password.form-control(type="password", name="password")
		
		.form-group
			label(for="confirmpassword") Xác nhận mật khẩu
			input#confirmpassword.form-control(type="password", name="confirmpassword")
		
		.form-group
			p Giới tính
			label.radio-inline(for="gender") Nam
				input#gender.form-control(type="radio", name="gender", checked)
			label.radio-inline(for="gender") Nữ
				input#gender.form-control(type="radio", name="gender")
		
		.form-group
			label(for="dateofbirth") Ngày sinh
			input#dateofbirth.form-control(type="date", name="dateofbirth")
		
		button.btn.btn-primary Đăng ký
